{
  "name": "mcp-stdio-v2-learning-starter",
  "version": "2.0.0",
  "type": "module",
  "description": "Learning-first MCP v2 stdio starter with a built-in scaffolding CLI",
  "main": "./dist/index.js",
  "bin": {
    "mcp-stdio-v2-starter": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts serve",
    "dev:cli": "tsx src/index.ts",
    "clean": "rimraf dist .tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:ci": "eslint . --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "npm run clean && tsc -p tsconfig.json",
    "check": "npm run typecheck && npm run lint:ci && npm run format:check",
    "smoke:stdio": "node scripts/smoke-stdio.mjs",
    "vendor:sdk:update": "node scripts/vendor-sdk-v2.mjs",
    "pipeline": "npm run clean && npm run check && npm run build && npm run smoke:stdio",
    "start": "node dist/index.js serve",
    "inspector": "npx @modelcontextprotocol/inspector node dist/index.js serve",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,md,css,scss,mjs}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@cfworker/json-schema": "^4.1.1",
    "@modelcontextprotocol/server": "file:vendor/modelcontextprotocol-server-2.0.0-alpha.0.tgz",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.3",
    "prettier": "^3.2.4",
    "rimraf": "^6.0.1",
    "tsx": "^4.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
